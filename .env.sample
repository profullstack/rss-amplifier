# RSS Amplifier Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# OpenAI Configuration (Required for AI snippet generation)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Override default OpenAI model (default: gpt-4)
# OPENAI_MODEL=gpt-4
# OPENAI_MODEL=gpt-3.5-turbo

# Optional: Override default temperature (default: 0.7, range: 0.0-2.0)
# OPENAI_TEMPERATURE=0.7

# Optional: Override default max tokens (default: 500)
# OPENAI_MAX_TOKENS=500

# =============================================================================
# Supabase Configuration (Optional - for analytics and logging)
# =============================================================================
# Get these from your Supabase project dashboard: https://supabase.com/dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Optional: Service role key for admin operations
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# Social Media Platform Credentials
# =============================================================================

# Twitter/X API Configuration
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# LinkedIn API Configuration
# Get from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

# Mastodon Configuration
# Your Mastodon instance and access token
MASTODON_INSTANCE_URL=https://mastodon.social
MASTODON_ACCESS_TOKEN=your-mastodon-access-token

# Bluesky Configuration
# Your Bluesky handle and app password
BLUESKY_HANDLE=your-handle.bsky.social
BLUESKY_APP_PASSWORD=your-bluesky-app-password

# Reddit Configuration
# Get from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password

# Facebook/Meta Configuration
# Get from: https://developers.facebook.com/
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_PAGE_ID=your-facebook-page-id

# =============================================================================
# Application Configuration
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Application port (for any web interface)
PORT=3000

# Data directory override (optional)
# RSS_AMPLIFIER_DATA_PATH=/custom/path/to/data

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# Feed Processing Configuration
# =============================================================================

# Default feed update interval in minutes (default: 60)
FEED_UPDATE_INTERVAL=60

# Maximum number of items to process per feed (default: 10)
MAX_ITEMS_PER_FEED=10

# Feed fetch timeout in milliseconds (default: 30000)
FEED_FETCH_TIMEOUT=30000

# Maximum retry attempts for failed feeds (default: 3)
FEED_MAX_RETRIES=3

# =============================================================================
# AI Processing Configuration
# =============================================================================

# Enable/disable AI snippet generation (default: true)
AI_ENABLED=true

# AI processing timeout in milliseconds (default: 30000)
AI_TIMEOUT=30000

# Batch size for AI processing (default: 5)
AI_BATCH_SIZE=5

# Content relevance filtering (default: true)
AI_FILTER_RELEVANCE=true

# =============================================================================
# Rate Limiting Configuration
# =============================================================================

# API rate limit per minute (default: 60)
API_RATE_LIMIT=60

# Social media posting rate limit per hour (default: 10)
POSTING_RATE_LIMIT=10

# =============================================================================
# Security Configuration
# =============================================================================

# JWT secret for authentication (if implementing web interface)
# JWT_SECRET=your-super-secret-jwt-key-here

# API key for webhook endpoints (if implementing webhooks)
# WEBHOOK_SECRET=your-webhook-secret-here

# =============================================================================
# Development/Testing Configuration
# =============================================================================

# Enable mock mode for testing (default: false)
MOCK_MODE=false

# Test database URL (for testing with real database)
# TEST_DATABASE_URL=postgresql://user:pass@localhost:5432/rss_amplifier_test

# Debug mode (default: false)
DEBUG=false

# Verbose logging (default: false)
VERBOSE=false